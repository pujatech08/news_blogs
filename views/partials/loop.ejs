    <% news = paginatedNews.data %>
    <% news.forEach(function(news, index){ %>
        <div class="post-content">
            <div class="row">
                <div class="col-md-4">
                    <a class="post-img" href="/single/<%= news._id %>"><img src="/uploads/<%= news.image %>"
                            alt="" /></a>
                </div>
                <div class="col-md-8">
                    <div class="inner-content clearfix">
                        <h3><a href='/single/<%= news._id %>'>
                                <%= news.title %>
                            </a></h3>
                        <div class="post-information">
                            <span>
                                <i class="fa fa-tags" aria-hidden="true"></i>
                                <a href='/category/<%= news.category.slug %>'>
                                    <%= news.category.name %>
                                </a>
                            </span>
                            <span>
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <a href='/author/<%= news.author._id %>'>
                                    <%= news.author.fullname %>
                                </a>
                            </span>
                            <span>
                                <i class="fa fa-calendar" aria-hidden="true"></i>
                                <%= new Date(news.createAt).toLocaleDateString('en-GB', { day: '2-digit' ,
                                    month: 'short' , year: 'numeric' }).toLowerCase() %>

                            </span>
                        </div>
                        <p class="description">
                            <%- news.content.substring(0,)+ '...' %>
                        </p>
                        <a class='read-more pull-right' href='/single/<%= news._id %>'>read more</a>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
        <% function buildQuery(query,page){
             const params = new URLSearchParams(query);
             params.set('page',page);
             return '?' + params.toString();
        } %>
            <nav>
                <ul class="pagination">
                    <% if(paginatedNews.hasPrevPage){ %>
                    <li class="page-item">
                        <a class="page-link" href="<%= buildQuery(query,paginatedNews.prevPage) %>">Previous</a>
                    </li>
                    <% } else { %>
                        <li class="page-item disabled">
                        <a class="page-link">Previous</a>
                    </li>
                    <% } %>
                    <% for(let i = 1; i <= paginatedNews.totalPages; i++){ %>
                       
                    <li class="page-item <%= (i == paginatedNews.currentPage) ? 'active':'' %>">
                        <a class="page-link" href="<%= buildQuery(query, i) %>"><%= i %></a>
                    </li>
                    <% } %>
                    <% if(paginatedNews.hasNextPage){ %>
                    <li class="page-item"><a class="page-link" href="<%= buildQuery(query, paginatedNews.nextPage) %>">Next</a></li>
                    <% } else { %>
                    <li class="page-item disabled">
                        <a class="page-link">Next</a>
                    </li>
                    <% } %>
                </ul>
            </nav>